# Solana Configuration
# Copy to .env and fill in real values

# Solana RPC Endpoint
# Development: https://api.devnet.solana.com
# Production: Use Helius, Alchemy, or QuickNode
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Treasury Wallet (Exchange-owned)
# Generate with: python solana_wallet.py
# NEVER commit this to git!
TREASURY_PRIVATE_KEY=your_encrypted_key_here

# Wallet Encryption Key (32-byte base64)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
WALLET_ENCRYPTION_KEY=your_encryption_key_here

# USDC Configuration
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v  # Mainnet USDC
# Devnet USDC: 4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Circle API (Fiat Offramp)
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_API_SECRET=your_circle_api_secret

# Commission Rates
COMMISSION_RATE_ARBITRAGE=0.06  # 6%
COMMISSION_RATE_CLAIMED=0.02    # 2%

# Payment Settings
MIN_TRANSACTION_USD=0.01         # Minimum transaction amount
AUTO_CASHOUT_THRESHOLD_USD=1000  # Auto-trigger fiat offramp
TREASURY_MIN_BALANCE_USD=5000    # Alert if treasury drops below this
